body {
  background: url('<%= asset_path 'bg.jpg' %>') no-repeat;
  background-attachment: fixed;
  background-size: cover;
}

nav.navbar-inverse {
  background: rgba(0,0,0,0.50);
  border: 0px;
}

nav.navbar .navbar-collapse.collapse.in {
  background: rgba(0,0,0,0.80);
}

main.content {
  margin-top: 60px;
  margin-bottom: 80px;
}

ul.collection-list {
  list-style-type: none;
  margin: 10px 0px 10px 0px;
  padding: 0;
}

.card {
  padding: 25px 30px;
  margin: 20px 5px;
  border: 1px solid #e8e8e8;
  background: #fff;
  box-shadow: 3px 3px 0px 1px rgba(0,0,0,0.12);
  border-radius: 4px;
}

.card h2 {
  margin: 0px 0px 10px 0px;
}

.card.green {
  border-left: 5px solid #5cb85c;
}

.card.yellow {
  border-left: 5px solid #f0ad4e;
}

.card.red {
  border-left: 5px solid #d9534f;
}

.card.blue {
  border-left: 5px solid #5bc0de;
}

.instagram-post {
  color: #125688;
}

.instagram-post .header>img {
  width: 50px;
  height: 50px;
}

.instagram-post .header>p {
  padding: 15px;
  margin-left: 55px;
  font-weight: bold;
}

.instagram-post .media {
  width: 100%;
  margin: 5px 0px;
}

.instagram-post .likes {
  font-weight: bold;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60px;
  padding: 20px;
  background-color: rgba(255, 255, 255, 0.35);
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}

.footer p {
  color: #000;
}

.footer a {
  color: #CC0099;
}

.footer a:hover {
  color: #A4007B;
}